<div id="myModal" class="report-my-student-modal">
  <!-- Modal content -->
  <div class="modal-report-my-student-content">
   <span class ='close-naplan' title = "Close"><i class="fa fa-window-close cgs-naplan-close" aria-hidden="true"></i></span>
    <img src="https://www.nap.edu.au/_resources/common_scales_image_file.png" alt="NAPLAN scale" > 
  </div>

</div>
<div class="card-deck" data-username = "{{username}}" data-campus = "{{campus}}" data-userid = "{{{userid}}}">
  <div class="card">
    <div class="card-img-top card-img-attendance">
     {{> report_mystudent/spinner}}
        <div class="chart">
            <canvas id="chart-attendance" class="chart-canvas"></canvas>
        </div>
    </div>
    <div class="card-body card-body-attendance">
      <h5 class="card-title">Attendance {{currentyear}}</h5>
      <p class="card-text" id = "card-body-attendance-info-text"></p>
    </div>
    <div class="card-footer">
      <h6 class="text-muted"><a href = '{{{atturl}}}' target = '_blank'>More details</a></h6>
    </div>
  </div>
  <div class="card">
    <div class="card-img-top card-img-academic">
    {{> report_mystudent/spinner}}
        <div class="chart">
            <canvas id="chart-academic" class="chart-canvas"></canvas>
        </div>
    </div>
    <div class="card-body card-body-academic-info">
      <h5 class="card-title">Academic info</h5>
      <p class="card-text" id = "card-body-academic-info-text"></p>
    </div>
    <div class="card-footer">
      <h6 class="text-muted"><a href = '{{{accurl}}}' target = '_blank'>More details</a></h6>
    </div>
  </div>
  <div class="card">
    <div class="card-img-top card-top-naplan">
    {{> report_mystudent/spinner}}
        <div class="chart" >
            <canvas id="chart-naplan" class="chart-canvas"></canvas>
        </div>
    </div>
    <div class="card-body card-body-naplan">
      <h5 class="card-title">NAPLAN</h5>
      <p class="card-text" id= "card-body-naplan-text"></p>
    </div>
    <div class="card-footer">
      <h6 class="text-muted"><a class = "naplan-scale" href = '#'>NAPLAN scales</a></h6>
    </div>
  </div>
</div>

