    <div class="table-responsive ">

        <table class="table table-bordered">
        <h3 class="text-center"><bold>{{studentname}}</bold></h3>
        <br>
        <thead> 
            <tr class="reports-heading">
                <th colspan=""></th>
                {{#yearlabels}}
                {{#years}}
                  <th colspan="2">{{year}} </th>               
                {{/years}}
                {{/yearlabels}}
            </tr>
        </thead>
        <tbody>
            <tr class="reports-heading">
                {{#reports}}
                {{#repos}}
                    <td>{{report}}</td>
                {{/repos}}
                {{/reports}}
            </tr>
            
            {{#learningareas}}
            {{#areas}}
            <tr>
                <td  class="area-heading">{{area}}</td>
                {{#dummyrows}}
                    <td >{{dummyvalue}}</td>
                {{/dummyrows}}
              
            </tr>

          {{#assesmentdetails}} 
            {{#assesmentdets}} 
                <tr>
                    <td class="assess-heading">
                        {{assessname}}
                    </td>

                    {{#grades}}
                        {{#assesmentgrades}}

                        <td { style="text-align: center; background-color: {{bgcolour}}; "
                            data-toggle="tooltip" data-placement="bottom" title = "{{grade}}">
                            {{ibscale}}
                        </td>

                        {{/assesmentgrades}}
                    {{/grades}}
                </tr>
            {{/assesmentdets}}
          {{/assesmentdetails}}
            
            {{/areas}}
            {{/learningareas}}
            
        
           
       
        </tbody>
    </table>
    </div>