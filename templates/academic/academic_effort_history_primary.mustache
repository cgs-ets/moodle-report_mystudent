    <table id = "effort-history-table" class="cgs-dashboard-gandeffort-table effort-history-table">
        <thead> 
            <tr class="reports-heading">
                <th >Learning Area</th>
                {{#years}}
                  <th colspan="2">{{year}} </th>               
                {{/years}}
            </tr>
        </thead>
        <tbody>
            <tr>
                {{#reports}}
                {{#repos}}
                    <td>{{report}}</td>
                {{/repos}}
                {{/reports}}
            </tr>
            
            {{#learningareas}}
           
            <tr>
                <td  class="area-heading">{{area}}</td>
                {{#grades}} 
               
                    <td { style="text-align: center; background-color: {{bgcolour}}; "
                    data-toggle="tooltip" data-placement="bottom" title = "{{title}}">
                    {{grade}}
                </td>
                {{/grades}}
            </tr>

          {{#assesmentdetails}} 
            {{#assesmentdets}} 
                <tr>
                    <td class="assess-heading">
                        {{assessname}}
                    </td>

                    {{#grades}}
                        {{#assesmentgrades}}

                        <td style="text-align: center; background-color: {{bgcolour}}; "
                            data-toggle="tooltip" data-placement="bottom" title = "{{grade}}">
                            {{ibscale}}
                        </td>

                        {{/assesmentgrades}}
                    {{/grades}}
                </tr>
            {{/assesmentdets}}
          {{/assesmentdetails}}
            
          
            {{/learningareas}}
            
        </tbody>
    </table>
