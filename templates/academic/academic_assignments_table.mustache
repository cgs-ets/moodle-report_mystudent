<table class="assignment-table">
    <thead>
    <tr class="attheader table-active">
        <th>{{#str}} term, report_mystudent {{/str}}</th>
        <th>{{#str}} week, report_mystudent {{/str}}</th>
        <th>{{#str}} testdate, report_mystudent {{/str}}</th>
        <th>{{#str}} subject, report_mystudent {{/str}}</th>
        <th>{{#str}} assessmentdescription, report_mystudent {{/str}}</th>
        <th>{{#str}} result, report_mystudent {{/str}}</th>
        <th>{{#str}} markoutof, report_mystudent {{/str}}</th>
        <th>{{#str}} weighting, report_mystudent {{/str}}</th>
    
    </tr>
    </thead>
    <tbody>
        {{#assessments}}
             {{#details}}
                <tr class="table-assignment-term-tr">
                    <td class= "text-center">
                        <b>{{term}}</b>
                    </td>
                    <td colspan= "7">{{dummycell}}</td>
                    
                </tr>
                   {{#results}}
                        <tr class= "text-center">
                            <td></td>
                            <td>{{week}}</td>
                            <td>{{testdate}}</td>
                            <td>{{classdescription}}</td>
                            <td>{{heading}}</td>    
                            <td>{{result}}</td>  
                            <td class="out-of-col">{{outof}}</td>
                            <td>{{weighting}}</td>
                        </tr>
                        {{/results}}
                {{/details}}
        {{/assessments}}
    </tbody>
 </table>